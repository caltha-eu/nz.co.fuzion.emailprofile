  <version>1.2</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>4.7</ver>
  </compatibility>
  <civix>
    <namespace>CRM/Emailprofile</namespace>
    <format>22.05.2</format>
  </civix>
</extension>
